---
layout: _layouts/home.njk
---

{% for post in collections.home | reverse %}
  <div class="post">
    <a class="post-link" href="{{post.url}}">{{ post.data.title }}</a>
    <div class="post-metadata">{{ post.data.date.toDateString() }}</div>
    <div class="post-content">
      <p>
      {{post.templateContent.substring(0, 250) | safe }}... 
      <a href="{{post.url}}">read more</a>
      </p>
    </div>
  </div>
{% endfor %}
